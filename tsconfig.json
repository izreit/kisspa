{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",                                      /* Specify what JSX code is generated. */
    "jsxFactory": "h",                                   /* Specify the JSX factory function used when targeting React JSX emit, e.g. 'React.createElement' or 'h'. */
    "jsxFragmentFactory": "h"                            /* Specify the JSX Fragment reference used for fragments when targeting React JSX emit e.g. 'React.Fragment' or 'Fragment'. */
    // "jsxImportSource": "",                            /* Specify module specifier used to import the JSX factory functions when using 'jsx: react-jsx*'. */
    // "reactNamespace": "",                             /* Specify the object invoked for 'createElement'. This only applies when targeting 'react' JSX emit. */
  },
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ]
}
